<?php
    $bila=$_POST["bil1"];
    $bilb=$_POST["bil2"];
    echo " Bilangan A :";
    echo $bila;
    echo "<br>";
    echo "Bilangan B :";
    echo $bilb;
    $jumlah=$bila+$bilb;
    echo " <br> ";

    echo " <h3>Jumlah bilangan $bila dan bilangan $bilb adalah $jumlah";
?>
